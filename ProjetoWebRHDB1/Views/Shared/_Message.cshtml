@if (TempData["tagMessage"] != null)
{

    if (TempData["tagMessage"].ToString() == "sucesso")
    {
        <div id="dialog-message-sucesso" class="backgroundAlert" title="Sucesso!">
            <span>
                @TempData["message"].ToString()
            </span>
        </div>
    }

    if (TempData["tagMessage"].ToString() == "erro")
    {
        <div id="dialog-message-erro" title="Ops!">
            <span>
                @TempData["message"].ToString()
            </span>
        </div>
    }

    if (TempData["tagMessage"].ToString() == "info")
    {

        <div id="dialog-message-info" title="Alerta!">
            <span>
                @TempData["message"].ToString()
            </span>
        </div>
    }
}

<style type="text/css">
    .backgroundAlert {
        background-color: #008ead;
    }
</style>
<link rel="stylesheet" href="~/Content/Style.css">
<link rel="stylesheet" href="~/Content/themes/base/jquery-ui.css">
@*<script type="text/javascript" src="~/Scripts/jquery.uploadify.js"></script>
<script type="text/javascript" src="~/Scripts/jquery.uploadify.min.js"></script>*@

<script src="~/Scripts/jquery-ui-11.12.js"></script>

<script type="text/javascript">
        $(document).ready(function () {


            $(function () {

                $("#dialog-message-sucesso").dialog({
                    closeText: 'Fechar',
                    modal: true,
                    buttons: {
                        Ok: function () {
                            $(this).dialog("close");
                        }
                    }
                });

                $("#dialog-message-erro").dialog({
                    closeText: 'Fechar',
                    modal: true,
                    buttons: {
                        Ok: function () {
                            $(this).dialog("close");
                        }
                    }
                });

                $("#dialog-message-info").dialog({
                    closeText: 'Fechar',
                    modal: true,
                    buttons: {
                        Ok: function () {
                            $(this).dialog("close");
                        }
                    }
                });

                $(".ui-dialog-titlebar").css("background", "#008ead")

            });
        });
</script>
